{% extends 'base.html.twig' %}

{% block title %}Form{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="{{ path('relatition.index')}}">CRUD</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{path('relatition.new')}}"> New Article</a><span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{path('relatition.tag.index')}}">Tag</a><span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{path('relatition.comment.index')}}">Comment</a><span class="sr-only">(current)</span></a>
      </li>
    </ul>
    <li class="form-inline my-2 my-lg-0">
      <a class="nav-link" href="{{path('app_logout')}}"><button type="button" class="btn btn-danger">Log out</button></a><span class="sr-only">(current)</span></a>
    </li>
  </div>
</nav>

{% set i = 1 %}

{% if i == 1 %}
    {% for message in  app.flashes('info')%}
            <div class="alert alert-success">
                {{ message }}
                {% set i = 0 %}
            </div>
    {% endfor %}
{% endif %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Author</th>
      <th scope="col">Comment</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  	{% for article in articles %}
    <tr>
      <th>{{loop.index}}</th>
      <th>{{article.name}}</th>
      <th>{{article.author}}</th>
      <th>{{article.comment.name}}<br>{{article.comment.discription}}</th>
      <th>
      <a href="{{ path('relatition.view', {id: post.id}) }}"><button type="button" class="btn btn-success">Edit</button></a>
      <a href="{{ path('relatition.delete', {id: post.id}) }}"><button type="button" class="btn btn-danger">Delete</button></a>
      </th>
    </tr>
	{% endfor %}
  </tbody>
</table>
{% endblock body %}